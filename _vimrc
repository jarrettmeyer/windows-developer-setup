set nocompatible		  # run in vim mode all the time
set hidden			      # hide buffers, instead of closing them
syntax on			        # turn on syntax highlighting
set history=10000
set expandtab
set tabstop=2
set shiftwidth=2
set softtabstop=2
set autoindent
set laststatus=2
set ruler
set showmatch
set number
set showcmd
let mapleader=","

"""""""""""""""""""
" Search
"""""""""""""""""""
set hlsearch
set incsearch
set ignorecase
set smartcase

"""""""""""""""""""
" Colors
"""""""""""""""""""
set t_Co=256
set background=dark


